<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unlimited.sports.globox.coach.mapper.CoachReviewsMapper">

    <!-- 批量查询评论的回复数量 -->
    <select id="selectReplyCountByReviewIds" resultType="java.util.Map">
        SELECT
        parent_review_id AS reviewId,
        COUNT(*) AS replyCount
        FROM coach_reviews
        WHERE parent_review_id IN
        <foreach collection="reviewIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND review_type = 2
        AND review_status = 1
        GROUP BY parent_review_id
    </select>

</mapper>