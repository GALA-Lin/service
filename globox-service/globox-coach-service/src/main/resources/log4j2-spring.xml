<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- ================== Properties ================== -->
    <Properties>
        <!-- 时间 / 级别 -->
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>

        <!-- 日志目录 -->
        <Property name="LOG_PATH">logs/coach</Property>

        <!-- 控制台日志格式（Spring Boot 风格） -->
        <Property name="CONSOLE_LOG_PATTERN">
            %clr{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %clr{${LOG_LEVEL_PATTERN}} %clr{%pid}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD}
        </Property>

        <!-- 文件日志格式 -->
        <Property name="FILE_LOG_PATTERN">
            %d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} %pid --- [%t] %X{traceId:-} %X{spanId:-} %X{X-B3-TraceId:-} %X{X-B3-SpanId:-} %X{sw8:-} %-60.60c{2} : %m%n${LOG_EXCEPTION_CONVERSION_WORD}
        </Property>
    </Properties>

    <!-- ================== Appenders ================== -->
    <Appenders>

        <!-- 控制台 -->
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}" charset="UTF-8"/>
        </Console>

        <!-- ERROR 文件 -->
        <RollingFile name="ErrorAppender"
                     fileName="${LOG_PATH}/error.log"
                     filePattern="${LOG_PATH}/%d{yyyy-MM-dd}/error.%d{yyyy-MM-dd-HH}.log.gz"
                     append="true">
            <PatternLayout pattern="${FILE_LOG_PATTERN}" charset="UTF-8"/>
            <Filters>
                <LevelMatchFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <!-- INFO 文件 -->
        <RollingFile name="InfoAppender"
                     fileName="${LOG_PATH}/info.log"
                     filePattern="${LOG_PATH}/%d{yyyy-MM-dd}/info.%d{yyyy-MM-dd-HH}.log.gz"
                     append="true">
            <PatternLayout pattern="${FILE_LOG_PATTERN}" charset="UTF-8"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <!-- 异步 -->
        <Async name="AsyncAppender" includeLocation="true">
            <AppenderRef ref="ErrorAppender"/>
            <AppenderRef ref="InfoAppender"/>
        </Async>

    </Appenders>

    <!-- ================== Loggers ================== -->
    <Loggers>
        <!-- 三方库降噪 -->
        <Logger name="org.apache.catalina.startup.DigesterFactory" level="ERROR"/>
        <Logger name="org.apache.catalina.util.LifecycleBase" level="ERROR"/>
        <Logger name="org.apache.coyote.http11.Http11NioProtocol" level="WARN"/>
        <Logger name="org.apache.sshd.common.util.SecurityUtils" level="WARN"/>
        <Logger name="org.apache.tomcat.util.net.NioSelectorPool" level="WARN"/>
        <Logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" level="ERROR"/>
        <Logger name="org.hibernate.validator.internal.util.Version" level="WARN"/>
        <Logger name="org.springframework.boot.actuate.endpoint.jmx" level="WARN"/>
        <Logger name="org.apache.dubbo" level="WARN"/>

        <!-- Root Logger（关键） -->
        <Root level="INFO" includeLocation="true">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncAppender"/>
        </Root>

    </Loggers>

</Configuration>